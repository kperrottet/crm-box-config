{
   "name":"user",
   "labels":{
      "en":"systen user",
      "fr":"utilisateur"
   },
   "icon":"bi bi-person-fill",
   "parents":[
      "brand"
   ],
   "unicity":[
      "username"
   ],
   "searchable":true,
   "db_table":"users",
   "default_page":"page_userProfile",
   "default_process":"process_user_new",
   "lineage_tree":{
      "title":"<strong>user</strong> %firstName %lastName",
      "characteristics":[
         "state",
         "firstName",
         "lastName"
      ]
   },
   "characteristics":[
      {
         "name":"username",
         "type":"text",
         "data_id":"username",
         "labels":{
            "en":"username",
            "fr":"identifiant"
         },
         "mandatory":true,
         "unicity":true,
         "rights":{
            "read":[
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "name":"secret_2FA",
         "type":"text",
         "data_id":"secret_2FA",
         "encryption":{
            "encrypt":true,
            "decrypt":[
               
            ]
         },
         "labels":{
            "en":"2FA key",
            "fr":"clef 2FA"
         },
		 "default":{
            "function":"2FA_secret",
            "parameters":{}
         },
         "mandatory":true,
         "unicity":true,
         "rights":{
            "read":[
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "name":"codename",
         "type":"text",
         "data_id":"codename",
         "encryption":{
            "encrypt":true,
            "decrypt":[
               
            ]
         },
         "labels":{
            "en":"code name",
            "fr":"nom secret"
         },
         "mandatory":false,
         "unicity":true,
         "rights":{
            "read":[
               "user"
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "name":"password",
         "type":"password",
         "data_id":"password",
         "hash":true,
         "labels":{
            "en":"password",
            "fr":"mot de passe"
         },
         "randomizer":{
            "labels":{
               "en":"random password",
               "fr":"mot de passe aléatoire"
            },
            "size":25
         },
		 "default":{
            "function":"random_password",
            "parameters":{"seed":true}
         },
         "inputs":[
            {
               "icon":"bi bi-key-fill",
               "labels":{
                  "en":"",
                  "fr":""
               }
            },
            {
               "icon":"bi bi-key-fill",
               "labels":{
                  "en":"repeat",
                  "fr":"confirmer"
               }
            }
         ],
         "mandatory":true,
         "validation":{
            "match":{
               "labels":{
                  "en":"password are not identical",
                  "fr":"les mots de passe ne sont pas identiques"
               }
            },
            "pattern":".{2,}",
            "tip":{
               "labels":{
                  "en":"at least 2 sign long",
                  "fr":"au moins 2 caractères"
               }
            },
            "invalid-feedback":{
               "labels":{
                  "en":"not matching pattern",
                  "fr":"format incorrect"
               }
            }
         },
         "rights":{
            "read":[
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "name":"ug",
         "type":"multiselect",
         "data_id":"ug",
         "labels":{
            "en":"user group",
            "fr":"groupes utilisateur"
         },
         "value_type":"dynamic",
         "value":{
            "function_name":"getUserGroupsList",
            "function_param":""
         },
         "mandatory":true,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin"
            ]
         }
      },
      {
         "name":"perspective",
         "type":"monoselect",
         "data_id":"perspective",
         "icon":"",
         "labels":{
            "en":"perspective",
            "fr":"perspective"
         },
         "value_type":"dynamic",
         "value":{
            "function_name":"getlistPerspectives"
         },
         "mandatory":false,
         "disabled":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin"
            ]
         }
      },
      {
         "name":"language",
         "type":"monoselect",
         "data_id":"language",
         "icon":"bi bi-translate",
         "labels":{
            "en":"language",
            "fr":"langue"
         },
         "value_type":"static",
         "value":[
            {
               "value":"en",
               "labels":{
                  "en":"English",
                  "fr":"Anglais"
               }
            },
            {
               "value":"fr",
               "labels":{
                  "en":"French",
                  "fr":"Français"
               }
            }
         ],
         "mandatory":true,
         "listing":{
            "filter":{
               "indexed":true,
               "type":"radio"
            },
            "type":"flag"
         },
         "disabled":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin"
            ]
         }
      },
      {
         "name":"state",
         "type":"monoselect",
         "data_id":"state",
         "icon":"bi bi-translate",
         "labels":{
            "en":"State",
            "fr":"Etat"
         },
         "listing":{
            "filter":{
               "indexed":true,
               "type":"radio"
            },
            "type":"state"
         },
         "value_type":"dynamic",
         "value":{
            "function_name":"getLifeCycleList",
            "function_param":"user"
         },
         "mandatory":true,
         "disabled":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin"
            ]
         }
      },
      {
         "name":"lastName",
         "type":"text",
         "data_id":"lastName",
         "labels":{
            "en":"name",
            "fr":"Nom"
         },
         "mandatory":true,
         "rights":{
            "read":[
            ],
            "edit":[
            ]
         }
      },
      {
         "name":"firstName",
         "type":"text",
         "data_id":"firstName",
         "mandatory":true,
         "labels":{
            "en":"first name",
            "fr":"Prénom(s)"
         },
         "disabled":false,
         "rights":{
            "read":[
               "super_admin"
            ],
            "edit":[
               "user",
               "admin",
               "super_admin"
            ]
         }
      },
      {
         "name":"email",
         "type":"email",
         "data_id":"email",
         "icon":"fas fa-at",
         "labels":{
            "en":"Email",
            "fr":"Email"
         },
         "validation":{
            "pattern":"[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,4}$"
         },
         "mandatory":true
      }
   ],
   "lifecycle":{
      "pending":{
         "labels":{
            "en":"Pending",
            "fr":"en Attente"
         },
         "bootstrap_class":"purple",
         "transitions":[
            {
               "labels":{
                  "en":"activate",
                  "fr":"activer"
               },
               "process":"process_user_activate",
               "target":"active"
            }
         ],
         "access":{
            "auth":false,
            "labels":{
               "fr":"pending welcome message",
               "en":"message pending"
            }
         }
      },
      "active":{
         "labels":{
            "en":"Active",
            "fr":"Actif"
         },
         "bootstrap_class":"success",
         "transitions":[
            {
               "labels":{
                  "en":"Lock",
                  "fr":"Bloquer"
               },
               "process":"process_user_lock",
               "target":"locked"
            },
            {
               "labels":{
                  "en":"Terminate",
                  "fr":"Supprimer"
               },
               "process":"process_user_terminate",
               "target":"terminated"
            }
         ],
         "access":{
            "auth":true,
            "labels":{
               "fr":"active welcome message",
               "en":"message actif"
            }
         }
      },
      "locked":{
         "labels":{
            "en":"Locked",
            "fr":"Verrouillé"
         },
         "bootstrap_class":"warning",
         "transitions":[
            {
               "labels":{
                  "en":"Unlock",
                  "fr":"Déverrouiller"
               },
               "process":"process_user_activate",
               "target":"active"
            },			
            {
               "labels":{
                  "en":"terminate",
                  "fr":"Supprimer"
               },
               "process":"process_user_terminate",
               "target":"terminated"
            }
         ],
         "access":{
            "auth":false,
            "labels":{
               "fr":"locked welcome message",
               "en":"message verouillé"
            }
         }
      },
      "terminated":{
         "labels":{
            "en":"terminated",
            "fr":"Supprimé"
         },
         "bootstrap_class":"danger",
         "transitions":[
            
         ],
         "access":{
            "auth":false,
            "labels":{
               "fr":"terminated welcome message",
               "en":"message termine"
            }
         }
      }
   }
}