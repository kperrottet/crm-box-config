{
   "name":"customer",
   "labels":{
      "en":"customer",
      "fr":"client"
   },
   "icon":"bi bi-person",
   "parents":[
      "brand"
   ],
   "unicity":{
      "characteristics":[
         [
            "firstName",
            "lastName"
         ],
         [
            "email"
         ],
         [
            "codebar"
         ]
      ]
   },
   "db_table":"customers",
   "searchable":true,
   "default_page":"page_customerDetails",
   "default_process":"process_customer_new",
   "lineage_tree":{
      "title":"%firstName %lastName <sup>%uniqid</sup>",
      "characteristics":[
         "state",
         "firstName",
         "lastName",
         "email"
      ]
   },
   "characteristics":[
      {
         "name":"title",
         "type":"monoselect",
         "data_id":"title",
         "default":"mr",
         "labels":{
            "en":"Title",
            "fr":"Civilité"
         },
         "value_type":"static",
         "value":[
            {
               "value":"mr",
               "labels":{
                  "en":"Mr",
                  "fr":"M."
               }
            },
            {
               "value":"mme",
               "labels":{
                  "en":"Mrs",
                  "fr":"M<sup>me</sup>"
               }
            },
            {
               "value":"mlle",
               "labels":{
                  "en":"Ms",
                  "fr":"M<sup>lle</sup>"
               }
            }
         ],
         "mandatory":true,
         "disabled":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin"
            ]
         }
      },
      {
         "name":"firstName",
         "type":"text",
         "data_id":"firstName",
         "autofield":"firstName",
         "mandatory":true,
         "labels":{
            "en":"First name",
            "fr":"Prénom(s)"
         },
         "disabled":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin",
               "user",
               "admin"
            ]
         }
      },
      {
         "name":"lastName",
         "type":"text",
         "data_id":"lastName",
         "autofield":"lastName",
         "mandatory":true,
         "labels":{
            "en":"Last name",
            "fr":"Nom de famille"
         },
         "disabled":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "name":"dob",
         "data_id":"dob",
         "type":"date",
         "labels":{
            "en":"Date of birth",
            "fr":"Date de naissance "
         },
         "mandatory":true
      },
      {
         "name":"place_of_birth",
         "type":"text",
         "data_id":"place_of_birth",
         "autofield":"place_of_birth",
         "mandatory":true,
         "labels":{
            "en":"Place of birth",
            "fr":"Lieu de naissance"
         },
         "disabled":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "name":"color",
         "type":"color",
         "data_id":"color",
         "icon":"fas fa-at",
         "labels":{
            "en":"Color",
            "fr":"Couleur"
         },
         "mandatory":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "name":"codename",
         "type":"text",
         "data_id":"codename",
         "encryption":{
            "encrypt":true,
            "decrypt":[
               "super_admin"
            ]
         },
         "labels":{
            "en":"Secret identity",
            "fr":"Nom secret"
         },
         "mandatory":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "type":"phoneNumber",
         "name":"phoneNumber",
         "data_id":"phoneNumber",
         "mandatory":false,
         "formatting":{
            "nationalMode":false,
            "excludeCountries":[
               
            ],
            "initialCountry":"se",
            "placeholderNumberType":"MOBILE",
            "preferredCountries":[
               "be",
               "es",
               "fr",
               "pl"
            ]
         },
         "labels":{
            "en":"Phone number",
            "fr":"Numéro téléphone"
         },
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "name":"email",
         "type":"email",
         "data_id":"email",
         "icon":"fas fa-at",
         "labels":{
            "en":"Email",
            "fr":"Email"
         },
         "validation":{
            "pattern":"[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,4}$"
         },
         "mandatory":true
      },
      {
         "name":"language",
         "type":"monoselect",
         "data_id":"language",
         "default":"en",
         "icon":"bi bi-translate",
         "labels":{
            "en":"language",
            "fr":"langue"
         },
         "value_type":"static",
         "value":[
            {
               "value":"fr",
               "labels":{
                  "en":"French",
                  "fr":"Français"
               }
            },
            {
               "value":"en",
               "labels":{
                  "en":"English",
                  "fr":"Anglais"
               }
            },
            {
               "value":"nl",
               "labels":{
                  "en":"Dutch",
                  "fr":"Néerlandais"
               }
            },
            {
               "value":"hu",
               "labels":{
                  "en":"Hungarian",
                  "fr":"Hongrois"
               }
            },
            {
               "value":"pl",
               "labels":{
                  "en":"Polish",
                  "fr":"Polonais"
               }
            },
            {
               "value":"de",
               "labels":{
                  "en":"German",
                  "fr":"Allemand"
               }
            }
         ],
         "mandatory":true,
         "listing":{
            "filter":{
               "indexed":true,
               "type":"radio"
            },
            "type":"flag"
         },
         "disabled":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "type":"relation",
         "name":"adress",
         "data_id":"adress",
         "labels":{
            "en":"Adress",
            "fr":"Adresse"
         },
         "entity":"adress",
         "display_format":"%streetNumber %streetName <br>%zipCode %city<br><strong>%country</strong>"
      },
      {
         "type":"relation",
         "name":"sale_contact",
         "data_id":"sale_contact",
         "labels":{
            "en":"Commercial contact",
            "fr":"Référent commercial"
         },
         "entity":"user",
         "all":true,
         "display_format":"%username (%firstName %lastName)"
      },
	  {
         "name":"ID_type",
         "type":"monoselect",
         "data_id":"ID_type",
         "default":"en",
         "icon":"bi bi-translate",
         "labels":{
            "en":"ID type",
            "fr":"Type de document"
         },
         "value_type":"static",
         "value":[
            {
               "value":"id",
               "labels":{
                  "en":"ID",
                  "fr":"Carte nationale d'identité"
               }
            },
            {
               "value":"passport",
               "labels":{
                  "en":"Passport",
                  "fr":"Passeport"
               }
            },
            {
               "value":"permit",
               "labels":{
                  "en":"Residency permit",
                  "fr":"Titre de séjour"
               }
            },
            {
               "value":"driving_license",
               "labels":{
                  "en":"Driving license",
                  "fr":"Permis de conduire"
               }
            }
         ],
         "mandatory":false,
         "listing":{
            "filter":{
               "indexed":true,
               "type":"radio"
            },
            "type":"flag"
         },
         "disabled":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "name":"id_number",
         "type":"text",
         "data_id":"id_number",
         "encryption":{
            "encrypt":true,
            "decrypt":[
               "super_admin"
            ]
         },
         "labels":{
            "en":"ID number",
            "fr":"Numéro CNI/Passeport"
         },
         "mandatory":false,
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin",
               "admin",
               "user"
            ]
         }
      },
      {
         "name":"id_validaty_date",
         "data_id":"id_validaty_date",
         "type":"date",
         "labels":{
            "en":"Date of expiry",
            "fr":"Date d'expiration"
         },
         "mandatory":false
      },
      {
         "name":"state",
         "labels":{
            "en":"State",
            "fr":"Etat"
         },
         "listing":{
            "filter":{
               "indexed":true,
               "type":"radio"
            },
            "type":"state"
         },
         "rights":{
            "read":[
               
            ],
            "edit":[
               "super_admin",
               "admin"
            ]
         }
      }
   ],
   "lifecycle":{
      "prospect":{
         "labels":{
            "en":"Prospect",
            "fr":"Prospect"
         },
         "bootstrap_class":"purple",
         "transitions":[
            {
               "labels":{
                  "en":"activate",
                  "fr":"activer"
               },
               "process":"process_customer_activate",
               "target":"active"
            }
         ]
      },
      "active":{
         "labels":{
            "en":"Active",
            "fr":"Actif"
         },
         "bootstrap_class":"success",
         "transitions":[
            {
               "labels":{
                  "en":"Homologate",
                  "fr":"Homologuer"
               },
               "process":"process_customer_homologate",
               "target":"homologated"
            },
            {
               "labels":{
                  "en":"Terminate",
                  "fr":"Supprimer"
               },
               "process":"process_customer_terminate",
               "target":"terminated"
            }
         ]
      },
      "homologated":{
         "labels":{
            "en":"Homologated",
            "fr":"Homologué"
         },
         "bootstrap_class":"success",
         "transitions":[
            {
               "labels":{
                  "en":"Terminate",
                  "fr":"Supprimer"
               },
               "process":"process_customer_terminate",
               "target":"terminated"
            },
            {
               "labels":{
                  "en":"Unhomologate",
                  "fr":"déhomologuer"
               },
               "process":"process_customer_un_homologate",
               "target":"active"
            }
         ]
      },
      "terminated":{
         "labels":{
            "en":"terminated",
            "fr":"Supprimé"
         },
         "bootstrap_class":"danger",
         "transitions":[
            {
               "labels":{
                  "en":"Purge",
                  "fr":"Purger"
               },
               "process":"process_customer_purge",
               "target":"purged"
            }
         ]
      },
      "purged":{
         "labels":{
            "en":"Purged",
            "fr":"Purgé"
         },
         "bootstrap_class":"dark",
         "transitions":[
            
         ]
      }
   }
}